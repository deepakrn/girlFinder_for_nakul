extends layout
block content
  title Meet Nakul
  script(src='/jquery/dist/jquery.js')
  script(src='/bootstrap/dist/js/bootstrap.js')
  script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.2.16/angular.js')
  script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.2.16/angular-resource.js')
  script(src='js/blueimp/blueimp-gallery.js')
  link(href='http://emojicss.com/emoji.css' rel='stylesheet')
  link(rel='stylesheet', href='css/blueimp/blueimp-gallery.min.css')
  link(rel='stylesheet', href='//netdna.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css')
  if !user
    a(href='/auth/facebook'): img(src='/images/login-with-facebook.png' width='154' height='22')
  else
    p Hello #{user._json.name}
  h1 Haave you met Nakul?!
  i(class='em em-sunglasses')
  div A fantastic guy to spend time with. I can assure you a life full of fun and surprises as long as you are with him. Below are some interesting facts:
  div [Please click on the image to see a description.]
  include gallery.html
  div
    a(href='https://www.facebook.com/nakul.chakrapani') Facebook
  div  
    a(href='https://www.linkedin.com/in/nakul-chakrapani-07979521') Linkedin
  if user
    div(ng-app='girlFinder')
      div
        form(action="../submit", method="post", enctype="text/plain", id="responseForm")
          table.table-pad
            tr
              td.text On a scale of 1-10 (10 being highest), please rate his profile!
              td
                select.form-control(form="responseForm", name="rating")
                  option(value='-1') Select a rating:
                  option(value='1') 1
                  option(value='2') 2
                  option(value='3') 3
                  option(value='4') 4
                  option(value='5') 5
                  option(value='6') 6
                  option(value='7') 7
                  option(value='8') 8
                  option(value='9') 9
                  option(value='10') 10
            tr
              td.text Would you like to go out for a cup of coffee with him?
              td
                label.radio-inline
                  input.radio(type='radio', name='coffee', value='no')
                  span No
                label.radio-inline
                  input.radio(type='radio', name='coffee', value='notSure')
                  span Not Sure
                label.radio-inline
                  input.radio(type='radio', name='coffee', value='maybe')
                  span May be
                label.radio-inline
                  input.radio(type='radio', name='coffee', value='Yes')
                  span Yes!
            tr
              td.text Would you like to ask him anything? 
              td 
                textarea.form-control(type='text', form="responseForm", name="questions")
            tr
              td.text A short intro of yourself?
              td
                textarea.form-control(type="text", form="responseForm", name="intro")
                input(hidden="true", form="responseForm", name="name", value="#{user._json.name}")
                
            tr
              td.text Ready to send?
              td
                button.btn-primary.button-pad(type='submit') Good Luck!
                  i(class="em em---1")
  else
    p Please login to express interest
      a(href='/auth/facebook'): img(src='/images/login-with-facebook.png' width='154' height='22')
  script(src='/js/app.js')
